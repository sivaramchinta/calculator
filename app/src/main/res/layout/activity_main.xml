<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textAlignment="viewEnd"
            android:text=""
            android:textSize="30dp" />

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:textAlignment="viewEnd"
            android:gravity="center"
            android:text=""
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
      style="@style/buttonRow">
        <Button
            android:id="@+id/btn_clear"
            style="@style/buttonNum"
            android:text="AC"
            >

        </Button>
        <Button
            android:id="@+id/btn_left"
            style="@style/buttonNum"
            android:text="(">

        </Button>
        <Button
            android:id="@+id/btn_right"
            style="@style/buttonNum"
            android:text=")">

        </Button>
        <Button
            android:id="@+id/btn_div"
            style="@style/buttonOpr"
            android:text="/">

        </Button>
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            android:id="@+id/btn_7"
            style="@style/buttonNum"
            android:text="7"
            >

        </Button>
        <Button
            android:id="@+id/btn_8"
            style="@style/buttonNum"
            android:text="8">

        </Button>
        <Button
            android:id="@+id/btn_9"
            style="@style/buttonNum"
            android:text="9">

        </Button>
        <Button
            android:id="@+id/btn_mul"
            style="@style/buttonOpr"
            android:text="X">

        </Button>
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            android:id="@+id/btn_4"
            style="@style/buttonNum"
            android:text="4">

        </Button>
        <Button
            android:id="@+id/btn_5"
            style="@style/buttonNum"
            android:text="5">

        </Button>
        <Button
            android:id="@+id/btn_6"
            style="@style/buttonNum"
            android:text="6">

        </Button>
        <Button
            android:id="@+id/btn_minus"
            style="@style/buttonOpr"
            android:text="-">

        </Button>
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            android:id="@+id/btn_1"
            style="@style/buttonNum"
            android:text="1">

        </Button>
        <Button
            android:id="@+id/btn_2"
            style="@style/buttonNum"
            android:text="2">

        </Button>
        <Button
            android:id="@+id/btn_3"
            style="@style/buttonNum"
            android:text="3">

        </Button>
        <Button
            android:id="@+id/btn_plus"
            style="@style/buttonOpr"
            android:text="+">

        </Button>
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            android:id="@+id/btn_dot"
            style="@style/buttonNum"
            android:text=".">

        </Button>
        <Button
            android:id="@+id/btn_0"
            style="@style/buttonNum"
            android:text="0">

        </Button>

        <Button
            android:id="@+id/btn_equl"
            style="@style/buttonNum"
            android:layout_weight="2"
            android:background="@color/orange"
            android:text="=">

        </Button>
    </LinearLayout>

</LinearLayout>